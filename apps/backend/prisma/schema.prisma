generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  
}

/* ================= WORKFLOW ================= */

model Workflow {
  id          String   @id @default(uuid())
  status      String
  title       String
  userId      String
  nodes       Json
  connections Json
  enabled     Boolean  @default(true)

  trigger     Trigger?
  actions     Action[]
  edges       Edge[]
  
 

  executions  Execution[]

  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

/* ================= EXECUTION ================= */

model Execution {
  id          String   @id @default(uuid())

  workflowId  String
  workflow    Workflow @relation(fields: [workflowId], references: [id])

  actionId    String
  action      Action   @relation(fields: [actionId], references: [id])

  pointer     String?
  status      String
  metadata    Json?
  createdAt   DateTime @default(now())
}


/* ================= TRIGGER ================= */

model Trigger {
  id                 String @id @default(uuid())
  workflowId         String @unique
  availableTriggerId String
  metadata           Json
  positionX          Int
  positionY          Int

  workflow         Workflow         @relation(fields: [workflowId], references: [id])
  availableTrigger AvailableTrigger @relation(fields: [availableTriggerId], references: [id])
}

model AvailableTrigger {
  id        String   @id @default(uuid())
  type      String
  name      String
  icon      String?
  createdAt DateTime @default(now())

  triggers Trigger[]
}

/* ================= ACTION ================= */

model Action {
  id                String @id @default(uuid())
  workflowId        String
  availableActionId String
  sortingOrder      Int
  metadata          Json
  positionX         Int
  positionY         Int

  workflow        Workflow        @relation(fields: [workflowId], references: [id])
  availableAction AvailableAction @relation(fields: [availableActionId], references: [id])

  executions Execution[]
}

model AvailableAction {
  id        String   @id @default(uuid())
  type      String
  name      String
  icon      String?
  createdAt DateTime @default(now())

  actions Action[]
}

/* ================= EDGE ================= */

model Edge {
  id           String @id @default(uuid())
  workflowId   String
  sourceNodeId String
  targetNodeId String

  workflow Workflow @relation(fields: [workflowId], references: [id])
}

/* ================= USER ================= */

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())

  workflows   Workflow[]
  credentials Credential[]
}

model Credential {
  id           String   @id @default(uuid())
  userId       String
  title        String
  platform     String
  credentials  Json
  description  String?

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
